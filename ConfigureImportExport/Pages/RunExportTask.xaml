<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConfigureImportExport.Pages.RunExportTask"
             Title="Run The Export Task"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:ConfigureImportExport.Pages">
    <Grid RowDefinitions="*,Auto">
        <ScrollView
            Grid.Row="0">
            <VerticalStackLayout>
                <Grid 
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                    ColumnDefinitions="*"
                    ColumnSpacing="10"
                    RowSpacing="10"
                    Margin="10"
                    Padding="10">
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*,*"
                        ColumnSpacing="10"
                        RowSpacing="10"
                        Margin="10"
                        Padding="10">
                        <Image
                            Source="fep_square.png"
                            HeightRequest="80"
                            HorizontalOptions="Start"
                            Grid.Row="0"
                            Grid.Column="0" />
                        <Image
                            Source="purlos.png"
                            HeightRequest="80"
                            HorizontalOptions="Center"
                            Grid.Row="0"
                            Grid.Column="1" />
                        <Image
                            Source="hartlepool_college_of_fe.jpg"
                            HeightRequest="80"
                            HorizontalOptions="End"
                            Grid.Row="0"
                            Grid.Column="2" />
                    </Grid>
                    <Label 
                        Grid.Row="1" 
                        Grid.Column="0" 
                        Text="Configuration Utility for File Import and Export Tools"
                        FontSize="Title"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" />
                    <Label 
                        Grid.Row="2" 
                        Grid.Column="0" 
                        Text="Welcome to the Configuration Tool which allows you to generate an appsettings.config file to use with the Export Tool"
                        FontSize="Subtitle"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" />
                    <Label 
                        Grid.Row="3" 
                        Grid.Column="0" 
                        Text="Cick on the tabs above or buttons below to switch between the different sections and enter information. Test after entry to make sure values were entered correctly."
                        FontSize="Body"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" />
                    <BoxView 
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="0,0,0,20"
                        HeightRequest="1" />

                    <Label 
                        Grid.Row="5" 
                        Grid.Column="0" 
                        HorizontalOptions="Center"
                        Text="Run the task to export the file once everything is configured on the previous tabs"
                        FontSize="Body" />

                    <Button 
                        Grid.Row="6" 
                        Grid.Column="0" 
                        HorizontalOptions="Center"
                        MinimumWidthRequest="260"
                        Text="Run Export Task" 
                        FontSize="Large"
                        BackgroundColor="#198754"
                        Clicked="RunButton_Clicked"
                        ImageSource="terminal_fill_large_white.png" />

                </Grid>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <ContentView x:Name="LoadingOverlay"
             IsVisible="False"
             BackgroundColor="Black"
             Opacity="0.7"
             Grid.RowSpan="2">
            <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="20">
                <ActivityIndicator IsRunning="True"
                           Color="White"
                           WidthRequest="50"
                           HeightRequest="50" />
                <Label Text="Please wait..."
               TextColor="White"
               FontSize="Medium"
               HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ContentView>
        <!-- Loading Overlay -->
        
        <local:FooterPartial
            Grid.Row="1"/>
    </Grid>
</ContentPage>