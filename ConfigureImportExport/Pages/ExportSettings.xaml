<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConfigureImportExport.Pages.ExportSettings"
             Title="Export Settings"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:ConfigureImportExport.Pages">
    <Grid RowDefinitions="*,Auto">
        <ScrollView
            Grid.Row="0">
            <VerticalStackLayout>
                <Grid 
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                    ColumnDefinitions="Auto,*"
                    ColumnSpacing="10"
                    RowSpacing="10"
                    Margin="10"
                    Padding="10"
                    x:Name="ExportSettingsGrid">
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*,*"
                        ColumnSpacing="10"
                        RowSpacing="10"
                        Margin="10"
                        Padding="10">
                        <Image
                            Source="fep_square.png"
                            HeightRequest="80"
                            HorizontalOptions="Start"
                            Grid.Row="0"
                            Grid.Column="0" />
                        <Image
                            Source="purlos.png"
                            HeightRequest="80"
                            HorizontalOptions="Center"
                            Grid.Row="0"
                            Grid.Column="1" />
                        <Image
                            Source="hartlepool_college_of_fe.jpg"
                            HeightRequest="80"
                            HorizontalOptions="End"
                            Grid.Row="0"
                            Grid.Column="2" />
                    </Grid>
                    <Label 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    Text="Export Settings"
                    FontSize="Title"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                    <Label 
                    Grid.Row="2" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2"
                    Text="Specify the export settings below to select the database object to extract the information from where all columns from this table/view/procedure will be exported"
                    FontSize="Body"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                    <BoxView 
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    HeightRequest="1" />

                    <Label 
                    Grid.Row="4" 
                    Grid.Column="0" 
                    Text="Database"
                    FontSize="Body" />
                    <Entry 
                    Grid.Row="4" 
                    Grid.Column="1" 
                    Text="{Binding DatabaseTable.Database}"
                    Placeholder="e.g. MISystemDatabase" 
                    TextChanged="OnEntryTextChanged" />

                    <Label 
                    Grid.Row="5" 
                    Grid.Column="0" 
                    Text="Schema"
                    FontSize="Body" />

                    <VerticalStackLayout
                    Grid.Row="5" 
                    Grid.Column="1">

                        <Entry 
                        Text="{Binding DatabaseTable.Schema}" 
                        Placeholder="e.g. dbo" 
                        TextChanged="OnEntryTextChanged" />
                        <Label 
                        Text="The database schema where you are exporting from. Usually dbo"
                        FontSize="Micro" />
                    </VerticalStackLayout>

                    <Label 
                    Grid.Row="6" 
                    Grid.Column="0" 
                    Text="Table or View"
                    FontSize="Body" />

                    <VerticalStackLayout
                    Grid.Row="6" 
                    Grid.Column="1">

                        <Picker 
                            x:Name="DatabaseObject"
                            ItemsSource="{Binding DatabaseTable.DatabaseObject}" 
                            SelectedItem="{Binding DatabaseTable.TableOrView, Mode=TwoWay}" />
                        <Label 
                        Text="Specify a table or a view here or instead use a stored procedure below which can include parameters"
                        FontSize="Micro" />
                    </VerticalStackLayout>

                    <Label 
                    Grid.Row="7" 
                    Grid.Column="0" 
                    Text="Stored Procedure Command"
                    FontSize="Body" />

                    <VerticalStackLayout
                        Grid.Row="7" 
                        Grid.Column="1">

                        <Picker 
                            x:Name="StoredProcedureCommand"
                            ItemsSource="{Binding DatabaseTable.DatabaseStoredProcedure}" 
                            SelectedItem="{Binding DatabaseTable.StoredProcedureCommand, Mode=TwoWay}"
                            SelectedIndexChanged="OnStoredProcedureNameChanged"/>
                        <Label 
                            Text="If both the table/view and stored procedure are specified then the stored procedure takes precedence"
                            FontSize="Micro" />
                        <Label 
                            Text="If using a stored procerdure ensure you GRANT EXEC permission to the user in the database otherwise it will not find the procedure"
                            FontSize="Micro" />
                        <Label 
                            Text="Ensure you also GRANT DB_DATAREADER to the databases accessed by the procedure too."
                            FontSize="Micro" />
                    </VerticalStackLayout>

                    <Label 
                        Grid.Row="8" 
                        Grid.Column="0" 
                        Text="Number Parameter 1"
                        FontSize="Body" />
                    <Grid 
                        Grid.Row="8" 
                        Grid.Column="1" 
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*,*,*"
                        ColumnSpacing="10"
                        RowSpacing="10">
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            Text="Parameter Name"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Text="{Binding DatabaseTable.StoredProcedureParam1IntegerName}" 
                            Placeholder="e.g. LastRecordID" 
                            TextChanged="OnEntryTextChanged" />
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="2" 
                            Text="Parameter Value"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="3" 
                            Text="{Binding DatabaseTable.StoredProcedureParam1IntegerValue}" 
                            Placeholder="e.g. 1145" 
                            TextChanged="OnEntryTextChanged" />
                    </Grid>

                    <Label 
                        Grid.Row="9" 
                        Grid.Column="0" 
                        Text="Number Parameter 2"
                        FontSize="Body" />
                    <Grid 
                        Grid.Row="9" 
                        Grid.Column="1" 
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*,*,*"
                        ColumnSpacing="10"
                        RowSpacing="10">
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            Text="Parameter Name"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Text="{Binding DatabaseTable.StoredProcedureParam2IntegerName}" 
                            Placeholder="e.g. LastRecordID" 
                            TextChanged="OnEntryTextChanged" />
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="2" 
                            Text="Parameter Value"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="3" 
                            Text="{Binding DatabaseTable.StoredProcedureParam2IntegerValue}" 
                            Placeholder="e.g. 1145" 
                            TextChanged="OnEntryTextChanged" />
                    </Grid>

                    <Label 
                        Grid.Row="10" 
                        Grid.Column="0" 
                        Text="Text Parameter 1"
                        FontSize="Body" />
                    <Grid 
                        Grid.Row="10" 
                        Grid.Column="1" 
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*,*,*"
                        ColumnSpacing="10"
                        RowSpacing="10">
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            Text="Parameter Name"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Text="{Binding DatabaseTable.StoredProcedureParam1StringName}" 
                            Placeholder="e.g. AcademicYearID" 
                            TextChanged="OnEntryTextChanged" />
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="2" 
                            Text="Parameter Value"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="3" 
                            Text="{Binding DatabaseTable.StoredProcedureParam1StringValue}" 
                            Placeholder="e.g. 25/26" 
                            TextChanged="OnEntryTextChanged" />
                    </Grid>

                    <Label 
                        Grid.Row="11" 
                        Grid.Column="0" 
                        Text="Text Parameter 2"
                        FontSize="Body" />
                    <Grid 
                        Grid.Row="11" 
                        Grid.Column="1" 
                        RowDefinitions="Auto"
                        ColumnDefinitions="*,*,*,*"
                        ColumnSpacing="10"
                        RowSpacing="10">
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="0" 
                            Text="Parameter Name"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Text="{Binding DatabaseTable.StoredProcedureParam2StringName}" 
                            Placeholder="e.g. AcademicYearID" 
                            TextChanged="OnEntryTextChanged" />
                        <Label 
                            Grid.Row="0" 
                            Grid.Column="2" 
                            Text="Parameter Value"
                            FontSize="Body" />
                        <Entry 
                            Grid.Row="0" 
                            Grid.Column="3" 
                            Text="{Binding DatabaseTable.StoredProcedureParam2StringValue}" 
                            Placeholder="e.g. 25/26" 
                            TextChanged="OnEntryTextChanged" />
                    </Grid>

                    <FlexLayout
                    Grid.Row="12" 
                    Grid.Column="1" 
                    Wrap="Wrap"
                    Direction="Row">
                        <HorizontalStackLayout
                        Spacing="5"
                        Padding="0,5,5,5">
                            <Button 
                            x:Name="TestButton"
                            Text="Test Settings" 
                            Clicked="OnTestButtonClicked"
                            ImageSource="database_fill_check_white.png" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout
                        Spacing="5"
                        Padding="5">
                            <Button 
                            x:Name="SaveButton"
                            Text="Save Changes" 
                            Clicked="OnSaveButtonClicked"
                            ImageSource="floppy_fill_white.png" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout
                        Spacing="5"
                        Padding="5">
                            <Button 
                            x:Name="CancelButton"
                            Text="Cancel"
                            Clicked="OnCancelButtonClicked"
                            ImageSource="arrow_counterclockwise_white.png" />
                        </HorizontalStackLayout>
                    </FlexLayout>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Loading Overlay -->
        <ContentView IsVisible="{Binding IsLoading}"
             BackgroundColor="Black"
             Opacity="0.5"
             Grid.RowSpan="2">
            <ActivityIndicator IsRunning="True"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Color="White" />
        </ContentView>
        
        <local:FooterPartial
            Grid.Row="1"/>
    </Grid>
</ContentPage>